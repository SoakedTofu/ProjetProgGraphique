<ContentDialog
    x:Class="ProjetGraphiqueSession.ContentDialogConnexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetGraphiqueSession"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        Orientation="Vertical"
        HorizontalAlignment="Center"
        >


        <TextBlock 
            Text="Numéro d'identification"
            Margin="10"
            />

        <TextBox 
            Width="300"
            x:Name="tb_identification"
            />

        <TextBlock 
            x:Name="tbl_erreurIdentification"
            Visibility="Collapsed"
            />

        <StackPanel
            Orientation="Vertical"
            HorizontalAlignment="Center"
            >
            
            <TextBlock 
            Text="Mot de passe"
            Margin=""
            />

            <TextBox 
            Width="300"
            x:Name="tb_MDP"
            />

            <TextBlock 
            x:Name="tbl_erreurMDP"
            Visibility="Collapsed"
            />
            
        </StackPanel>




    </StackPanel>
</ContentDialog>
